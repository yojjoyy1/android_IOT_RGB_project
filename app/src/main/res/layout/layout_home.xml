<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/rgb_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/led" />

    <TextView
        android:id="@+id/RGB_R"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/rgb_imageView"
        app:layout_constraintStart_toStartOf="@+id/rgb_imageView"
        app:layout_constraintTop_toBottomOf="@+id/rgb_imageView" />

    <TextView
        android:id="@+id/textView_R"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R:"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/RGB_R"
        app:layout_constraintEnd_toStartOf="@+id/RGB_R"
        app:layout_constraintTop_toTopOf="@+id/RGB_R" />

    <TextView
        android:id="@+id/RGB_G"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/RGB_R"
        app:layout_constraintStart_toEndOf="@+id/textView_R"
        app:layout_constraintTop_toBottomOf="@+id/RGB_R" />

    <TextView
        android:id="@+id/textView_G"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="G:"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/RGB_G"
        app:layout_constraintEnd_toStartOf="@+id/RGB_G"
        app:layout_constraintTop_toTopOf="@+id/RGB_G" />

    <TextView
        android:id="@+id/RGB_B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/RGB_G"
        app:layout_constraintStart_toEndOf="@+id/textView_G"
        app:layout_constraintTop_toBottomOf="@+id/RGB_G" />

    <TextView
        android:id="@+id/textView_B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="B:"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/RGB_B"
        app:layout_constraintEnd_toStartOf="@+id/RGB_B"
        app:layout_constraintTop_toTopOf="@+id/RGB_B" />

    <ImageView
        android:id="@+id/moodImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/marquee_textView"
        app:srcCompat="@drawable/sad" />

    <ImageView
        android:id="@+id/mask_imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/moodImageView"
        app:layout_constraintEnd_toEndOf="@+id/moodImageView"
        app:layout_constraintStart_toStartOf="@+id/moodImageView"
        app:layout_constraintTop_toTopOf="@+id/moodImageView"
        app:srcCompat="@drawable/mask" />

    <TextView
        android:id="@+id/marquee_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="left"
        android:textColor="@color/dark_red"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RGB_B" />

</androidx.constraintlayout.widget.ConstraintLayout>
